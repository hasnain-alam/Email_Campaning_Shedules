<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #f7f9fb;
    padding: 20px;
    color: #333;
  }

  h2 {
    text-align: center;
    color: #2c3e50;
    margin-bottom: 30px;
  }

  .campaign {
    background: #fff;
    border-left: 5px solid #3498db;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.2s;
  }

  .campaign:hover {
    transform: scale(1.01);
  }

  .campaign h3 {
    margin: 0 0 10px;
    color: #2980b9;
  }

  .campaign p {
    margin: 0 0 8px;
  }

  .campaign small {
    display: block;
    margin-bottom: 10px;
    color: #888;
  }

  .logs {
    list-style-type: none;
    padding-left: 0;
    margin: 0;
  }

  .logs li {
    background: #ecf0f1;
    margin: 5px 0;
    padding: 6px 10px;
    border-radius: 4px;
    font-size: 0.95em;
  }
</style>

<h2>All Campaigns</h2>

{{#each campaigns}}
  <div class="campaign">
    <h3>{{this.title}} - {{this.status}}</h3>
    <p>{{this.message}}</p>
    <small>Scheduled: {{this.scheduledTime}}</small>
    <ul class="logs">
      {{#each this.logs}}
        <li>{{this.email}} - {{this.status}}</li>
      {{/each}}
    </ul>
  </div>
{{/each}}
